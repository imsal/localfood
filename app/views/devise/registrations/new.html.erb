<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

    <!-- :first_name, :last_name, :email, :password, :password_confirmation, :phone_number, :street_address, :suite, :city, :state, :zip_code, :business_name, :food_category, :notes -->

    <div class="field">
      <%= f.label 'User Roles' %><br/>
      <%= f.radio_button :role, 'super_admin', :checked => 'false' %>
      <%= f.label :role, 'Super Admin' %>
      <%= f.radio_button :role, 'admin', :checked => 'false' %>
      <%= f.label :role, 'Admin' %>
      <%= f.radio_button :role, 'business', :checked => 'false' %>
      <%= f.label :role, 'Business' %>
      <%= f.radio_button :role, 'customer', :checked => 'false' %>
      <%= f.label :role, 'Customer' %>
    </div>



    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :first_name, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :street_address %><br />
      <%= f.text_field :street_address, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :suite %><br />
      <%= f.text_field :suite, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code, autocomplete: "on", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :business_name %><br />
      <%= f.text_field :business_name, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :notes %><br />
      <%= f.text_area :notes, autocomplete: "off", class: 'form-control' %>
    </div>


  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
